<div class="container">
  <div class="row">
    <div class="col-md-4 col-md-offset-4 center">

      <div class="text-center">
        <% if params[:plan] == '2' %>
          <h1>Pro Account</h1>
          <p>Sign up for the Pro Account for $10/month and get full access to the community and contact info.</p>
        <% else %>
          <h1>Basic Account</h1>
          <p>Sign up for free and get basic access to the community.</p>
        <% end %>
      </div>
      <div class="well">
        <% if params[:plan] == '2' %>

          <%= render 'pro_form' %>
        <% else %>
          <%= render 'basic_form' %>
        <% end %>

        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
